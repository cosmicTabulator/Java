import java.awt.Font;

public class Main {

	public static Screen screen;
	public boolean running = true;
	int time;
	int tickCount = 20;
	int ticks;
	
	Object ball;
	
	public Main(){
		
		Screen screen = new Screen(400, 300);
		Draw draw = new Draw();
		
		Object ball = new Object(200,0);
		
//		Font f = new Font(Font.MONOSPACED, Font.PLAIN, 14);
//		
//		draw.g.setFont(f);
//		
//		draw.g.drawString("A@B", 0, 10);
//		draw.g.drawLine(0, 14, 400, 14);
//		draw.g.drawLine(7, 0, 7, 300);
//		draw.g.drawLine(14, 0, 14, 300);
		
//		draw.g.drawString("Terrus", 200, 100);
//		draw.g.drawString("v 0.0", 200, 200);
		
		draw.refresh();
		
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		new Main();

	}
	
	private void mainLoop(){
		while(running){
			time = (int) System.currentTimeMillis();
			if (time % tickCount == 0){
				ticks++;
				tickUpdate();
			}
		}
	}
	
	public void tickUpdate(){
		ball.getPos();
		ball.draw();
		
	}

}
