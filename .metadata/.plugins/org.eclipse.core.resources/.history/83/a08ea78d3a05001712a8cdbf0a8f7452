package entities;

import java.awt.event.KeyEvent;
import java.io.IOException;
import java.util.Set;

import javax.imageio.ImageIO;

import gui.Arcade;
import main.Vector;

public class Boss1 extends Entity{

	private int lastSpawn;
	private int fireRate = 20;
	
	public Boss1(Vector pos) {
		super(pos, new Vector(0,0,0));
		
		try {
		    img = ImageIO.read(getClass().getResource("/Textures/Enemy2.png"));
		} catch (IOException e) {
			System.out.println(this);
			System.out.println(e);
		}
		
	}

	@Override
	public void AI(int ticks){

	}
	
	@Override
	public void checkActionMap(Set<Integer> s){
		if(s.contains(KeyEvent.VK_P) && ticks - lastSpawn > fireRate){
			Arcade.addObject(new SpiralBullet (new Vector(pos.x + (width/2), pos.y, 0), new Vector(0, 0, 0), this.pos));
			lastSpawn = ticks;
		}
	}
	
}
