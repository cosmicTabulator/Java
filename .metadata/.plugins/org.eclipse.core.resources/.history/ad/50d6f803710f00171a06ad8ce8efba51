package graphics;

import java.awt.Color;

import main.Tuple;

public class Cell {

	char text;
	Color c;
	final Tuple pos;
	String tag;
	
	public Cell(Tuple pos, Color defaultColor){
		
		this.pos = pos;
		c = defaultColor;
		
	}
	
	public Tuple getPos(Tuple position){return this.pos;}
	
	public void setChar(char character){text = character;}
	
	public char getChar(){return text;}
	
	public void setColor(Color color){this.c = color;}
	
	public Color getColor(){return c;}
	
	public void setTag(String tag){this.tag = tag;}
	
	public String getTag(){return tag;}
	
}
