
import java.awt.*;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.awt.image.BufferedImage;

public class Screen {
	
	public Screen(){
		
		Frame frame = new Frame();
		
		frame.setSize(500, 500);
		
		ImageContainer panel = new ImageContainer();
		
		frame.add(panel);
		
		frame.addKeyListener(new KeyListener(){
			@Override
			public void keyTyped(KeyEvent e){
			}
			
			@Override
			public void keyPressed(KeyEvent e){
				int value = e.getKeyCode();
				switch(value){
				
				case KeyEvent.VK_R:
					panel.image.setRGB(250, 250, Color.RED.getRGB());
					panel.repaint();
				case KeyEvent.VK_G:
					panel.image.setRGB(250, 250, Color.GREEN.getRGB());
					panel.repaint();
				case KeyEvent.VK_B:
					panel.image.setRGB(250, 250, Color.BLUE.getRGB());
					panel.repaint();
				case KeyEvent.VK_Q:
					System.exit(0);
				default:
					return;
				}
			}
			
			@Override
			public void keyReleased(KeyEvent e){
			}
		});
		
		frame.setVisible(true);
		
	}

}

class ImageContainer extends Panel{
	
	public BufferedImage image;
	
	public ImageContainer(){
		image = new BufferedImage(250, 250, BufferedImage.TYPE_INT_RGB);
		Graphics g = image.createGraphics();
		g.setColor(Color.BLACK);
		g.fillRect(0, 0, 250, 250);
		g.dispose();
	}
	
	public void paint(Graphics g){
		super.paint(g);
		Graphics2D g2d = (Graphics2D) g;
		
		g2d.drawImage(image, 0, 0, this);
		
	}
	
}


