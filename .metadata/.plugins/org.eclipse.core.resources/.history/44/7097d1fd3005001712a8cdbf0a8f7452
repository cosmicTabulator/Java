package entities;

import java.awt.event.KeyEvent;
import java.util.Set;

import gui.Arcade;
import main.Vector;

public class Boss1 extends Entity{

	private int lastSpawn;
	private int fireRate;
	
	public Boss1(Vector pos) {
		super(pos, new Vector(0,0,0));
		// TODO Auto-generated constructor stub
	}

	@Override
	public void AI(int ticks){

	}
	
	@Override
	public void checkActionMap(Set<Integer> s){
		if(s.contains(KeyEvent.VK_P) && ticks - lastSpawn > fireRate){
			Arcade.addObject(new Bullet (new Vector(pos.x + (width/2), pos.y, 0), new Vector(0, 0, 0)));
			lastSpawn = ticks;
		}
	}
	
}
