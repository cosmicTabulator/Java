		while(running){
			
			if(System.currentTimeMillis() - lastTick > 20){
				
				System.out.println("Tick");
				
				lastTick = System.currentTimeMillis();
				
				if(Screen.keys.contains(KeyEvent.VK_Q)){
					running = false;
				}
				
				Graphics2D g = screen.image.createGraphics();
				
				for(int x = 0; x < 800; x++){
					for(float y = 0; y < 800; y++){
						
						g.setColor(Color.getHSBColor(0, 0, ((float)y/800)));
						
						g.fillRect(x, (int)y, 1, 1);
						
					}
				}
				
				g.dispose();
				
				screen.pane.repaint();
				
				System.exit(0);
			}
			
		}
		
		System.exit(0);
		
	}
	
