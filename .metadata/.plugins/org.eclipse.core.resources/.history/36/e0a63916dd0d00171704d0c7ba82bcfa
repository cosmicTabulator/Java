import java.util.List;

public class Main {

	long lastTick;
	
	Screen screen;
	boolean running = true;
	
	public Main(){
		
		screen = new Screen(800,800);
		
//		Generator gen = new Generator(0.5f, 10, new Point(0, 0), new Point(800, 1));
//		
//		List<Point> lx = gen.generate1d();
