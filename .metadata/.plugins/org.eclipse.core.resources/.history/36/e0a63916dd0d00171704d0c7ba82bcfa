//		}
//		
//		ly = Point.interpolate(ly);
//		
//		Graphics2D g = screen.image.createGraphics();
//		
//		Color val = Color.getHSBColor(0, 0, 0);
//		
//		for(int x = 0; x < 800; x++){
//			for(int y = 0; y < 800; y++){
//				
//				Point px = Point.searchFor(lx, x);
//				Point py = Point.searchFor(ly, y);
//				
//				float nVal = (float) (px.y + py.y);
