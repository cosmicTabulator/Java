import java.io.IOException;

import javax.imageio.ImageIO;

public class Bobber extends Entity{

	int timer;
	boolean shooting;
	
	public Bobber(Vector pos) {
		super(pos, new Vector(0,0,0));
		
		try {
		    img = ImageIO.read(getClass().getResource("Textures/Enemy3.png"));
		} catch (IOException e) {
			System.out.println(this);
			System.out.println(e);
		}
	}
	
	@Override
	public void AI(int ticks){
		timer++;
		
		if(timer > 100 && !shooting){
			vel.y = (float) Math.sin((float)ticks/10) * 100;
		} else if(timer > 20 && shooting){
			Main.addObject(new EnemyBullet(pos, new Vector(0, 200, 0)));
		} else if(shooting){
			shooting = false;
		} else{
			shooting = true;
		}

	}

}
